<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home_demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context="com.zowdow.direct_api.ui.sections.home.HomeDemoActivity">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_keyword"
        app:hintAnimationEnabled="true"
        android:id="@+id/suggestion_query_layout">
        <android.support.design.widget.TextInputEditText
            android:lines="1"
            android:singleLine="true"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/suggestion_query_edit_text"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suggestions_list_view"
        android:layout_below="@id/suggestion_query_layout"
        android:padding="2dp">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
